{
  "manifest_version": 3,

  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.1.0",

  "default_locale": "en",

  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "__MSG_appTooltip__"
  },

  "background": {
    "service_worker": "event.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
